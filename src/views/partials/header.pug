header 
  h1= pageTitle
  nav 
    ul 
      li
        if (pageTitle !== "Home")
          a(href="/") Home
      li
        a(href="/search") Search
      if (!loggedIn)
        li
          a(href="/join") Join
        li
          a(href="/login") Login
      if (loggedIn)
        li 
          span Welcome #{ loggedInUser.name }!
        li 
          a(href="/users/logout") Log Out
        li 
          a(href="/videos/upload") Upload Video
